{
  "version": "0.2.0",
  "configurations": [
  
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Leetcode Drills",
      "program": "${workspaceFolder}/dist/modules/leetCodeStyle/index.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Engineering Drills",
      "program": "${workspaceFolder}/dist/modules/engineeringDrills/index.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_FILES": "true",
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_PROJECT": "tsconfig.json",
      },
      "args": ["--config=src/test/.mocharc.json"],
    }
  ]
}