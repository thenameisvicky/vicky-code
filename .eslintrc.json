{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-use-before-define": "off", 
        "@typescript-eslint/no-use-before-define": [
            "error",
            {
                "classes": false,
                "variables": true,
                "typedefs": false
            }
        ],
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/no-unused-vars": "warn",
        "no-console": "off"
    }
}